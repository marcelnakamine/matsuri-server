extends layout

block content
  h1= title
  p Welcome to #{title}
  form(
    action='/api/v1/users/signin',
    method='post'
  )
    div
      label Username:
      input(
        type='text',
        name='username'
      )
    div
      label Password:
      input(
        type='password',
        name='password'
      )
    div
      input(
        type='submit',
        value='Log In'
      )
  |
  |
  h2 Register
  form(
    action='/api/v1/users/signup',
    method='post'
  )
    div
      label Username:
      input(
        type='text',
        name='username'
      )
    div
      label Password:
      input(
        type='password',
        name='password'
      )
    div
      input(
        type='submit',
        value='Register'
      )
